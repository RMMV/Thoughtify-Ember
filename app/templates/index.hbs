<section data-template="index">
	<section class="sky">

		<nav class="auth">
			<button type="button" {{action 'login'}}>Login</button>
			<button type="button" {{action 'register'}}>Register</button>
		</nav>

		<hgroup>
			<h1> Thoughtify </h1>
			<h2> Lorem ipsum dolor sit amet, consectetur. </h2>
		</hgroup>

		<section class="login-form">
		
			<form {{action 'authenticate' on='submit'}}>

				<label for="identification">Login</label>
				
				{{input 
					id='identification' 
					placeholder='Username' 
					value=identification
				}}

				<label for="password">Password</label>

				{{input 
					id='password' 
					placeholder='Password' 
					type='password' 
					value=password
				}}

				<button type="submit">Login</button>
			</form>
		</section>

		{{#each fallingIdeas as |idea index|}}
			{{#falling-idea 
				duration=idea.duration 
				delay=idea.delay 
				rotation=idea.rotation 
				left=idea.left
				after-fall='createIdea'
			}}

				Idea Number {{index}}
			{{/falling-idea}}
		{{/each}}
	</section>
</section>
pos(top = auto, bottom = auto, left = auto, right = auto)
	top top
	bottom bottom
	left left 
	right right 

absolute(top = auto, bottom = auto, left = auto, right = auto)
	position absolute
	pos(top: top, bottom: bottom, left: left, right: right) 
	

[data-template='app']
	
	link-color-bg = black
	link-color = lighten(grey, 50%)
	
	nav
		// positioning
		position fixed
		pos(top: 0, left: 0)
		
		height 100vh
		
		group()
		
		+tablet()
			width 4rem
			
		+desktop()
			width 15rem
			
		background-color link-color-bg

		h1
			h1()
			text-align center
			
			a
				link(color: link-color, style: 'none')
			
		h2 
			h2(1.0)
			normal()
			margin 0.5rem 0rem 0.5rem 1.5rem
			
		h1
		h2
			color link-color

		ul
			reset-list()
			padding 0 0.75rem

			li	
				link-font-size = 1rem
				height link-font-size + 2 * 0.5rem
				
				a
					height 100%
					position relative
					
					// the entire thing should do cursor pointer
					display block
					
					// built-in axis mixin
					link(color: link-color, style: 'none')
					
					:last-child
						// ensure the correct font-size is set
						font-size link-font-size
						
						padding 0.5rem 0
						absolute(top:0, left: 1.25rem)
					
					// manual background change on hover
					transition background-color 0.2s ease

					:first-child
						border none 
						transition border-left 0.2s ease
						absolute(top: 0, left: 0, bottom: 0)
				
				a.active
				a:hover
					:first-child
						border-left 0.2rem solid white

				a:hover
					// manual background change on hover 
					background-color lighten(link-color-bg, 5%)
				
				a.active
					// manual background change on hover 
					background-color lighten(link-color-bg, 10%)
					
		

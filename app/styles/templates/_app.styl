[data-template='app']
	
	link-color-bg = black
	link-color = lighten(grey, 50%)
	sidebar-width-desktop = 15rem
	sidebar-width-tablet = 4rem
	
	&>nav
		// positioning
		fixed(top: 0, left: 0)
		
		height 100vh
		
		group()
		
		+tablet()
			width sidebar-width-tablet
			
		+desktop()
			width sidebar-width-desktop
			
		background-color link-color-bg

		h1
			h1()
			text-align center
			margin-bottom 1rem
			color link-color
			
			a
				link(color: link-color, style: 'none')
			

		ul
			reset-list()
			padding 0.75rem

			li	
				link-font-size = 1rem
				height link-font-size + 2 * 0.5rem
				
				a
					height 100%
					relative()
					
					// the entire thing should do cursor pointer
					display block
					
					// built-in axis mixin
					link(color: link-color, style: 'none')
					
					:last-child
						// ensure the correct font-size is set
						font-size link-font-size
						
						padding 0.5rem 0
						absolute(top:0, left: 1.25rem)
					
					// manual background change on hover
					transition background-color 0.2s ease

					:first-child
						border none 
						transition border-left 0.2s ease
						absolute(top: 0, left: 0, bottom: 0)
				
				a.active
				a:hover
					:first-child
						border-left 0.2rem solid white

				a:hover
					// manual background change on hover 
					background-color lighten(link-color-bg, 5%)
				
				a.active
					// manual background change on hover 
					background-color lighten(link-color-bg, 10%)
		hr 
			height 0 
			border 0
			border-top 0.1rem solid rgba(0,0,0,0.1)
			border-bottom 0.1rem solid rgba(255,255,255,0.3)
			margin 0 1rem

	&>section
		
		+desktop()
			fixed(right: 0, top: 0, bottom: 0, left: sidebar-width-desktop)
		
		+tablet()
			fixed(right: 0, top: 0, bottom: 0, left: sidebar-width-tablet)
		
		// simple padding
		padding 1rem
		
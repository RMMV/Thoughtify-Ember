full-center(width = 100vw)
	width width
	position fixed
	transform translateX(-50%) translateY(-50%)
	left 50vw
	top 50vh

sky(color = #3498db)
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	bg('images/clouds.png',no-repeat,  color)
	
// requires position relative
@keyframes bounce-right
	0%
		right 1rem
	50% 
		right 3rem
	100% 
		right 1rem

[data-template='index']

	// liquid-fire fixes
	// don't screw with this, future me
	height 100vh
	width 100vw
	position fixed

	section.sky
		
		sky()
		
		section.forms 
		
			// form aligned dead center of page
			full-center(50vw)
			min-width 500px
			
			// ensure form is hidden when we start off
			visibility hidden

			form 
				
				// make sure fields are nicely spaced out
				.field
					field(direction: left, width: 100%)
					padding 0.25rem 0.75rem
					
				label
					display none
				input
					input(width: 100%)
				button
					glossy-button(color: green)
					width 100%
		
		nav.auth
			
			navigation(bgColor: rgba(255,255,255,0), linkColor: black, size: 2)

			// we need a completely transparent nav, cancel out these defaults
			box-shadow none
			border none

			a
				bold()
		
		nav.app
			
			// positioning the link center-right
			text-align right
			full-center(100vw)
			
			// nav overpowers other elements because it's the 
			// furthest down in the html document
			z-index -1
			
			a
				fs(6rem)
				link(color: rgba(255,255,255,0.75), style: 'glow')
				
				// ensure that people can't select the arrow
				user-select none
				
				// animation
				position relative
				
				// push the text up slightly to vertically center it 
				bottom 0.5rem

				+desktop()
					animation bounce-right 2s infinite
				
				// doesn't make sense to have arrow on mobile/tablet screens
				+below(rupture.desktop-cutoff)
					display none

		hgroup
			
			/*
				This is a hack. The app navigation bar is furthest down in the html doc
				so it's rendered above every other element. To make the forms editable 
				(they're hidden behind the app navigation bar), we have to set the z-index
				of the navigation bar to -1. But this makes it so that this hgroup goes 
				infront of the nav, rendering it useless. Therefore, I set the width to 
				75vw, leaving enough room to click on the right-arrow inside the app
				navigation bar. 
			*/
				
			full-center(75vw)
			color white
			
			h1
				h1(size: 3.6)
				margin 0
			h2 
				h2(size:1.2)
				margin 0 0 1rem 0
				
			h1
			h2
				text-align center
				
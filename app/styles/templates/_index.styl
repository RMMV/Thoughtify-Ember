[data-template='index']
	
	// liquid-fire fixes
	min-height 100vh
	min-width 100vw

	section.sky
		// fill the entire screen
		expand() 
			position fixed
			top 0
			bottom 0
			left 0
			right 0
		
		shift-down() 
			position relative
			top 20vh

		expand()
		background-color #3498db

		hgroup
			font-family 'Open Sans'
			color white
			
			text-align center
			shift-down()

			h1
				font-size 500%
				
				// ensure the slogan and the website title 
				// are adaquately spaced out
				margin-bottom 0.1em
	
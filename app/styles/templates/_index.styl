.website-intro {
	font-family: 'Open Sans';
	color: white;

	position: relative;
	top:25vh;
	text-align:center;

	h1 {
		font-size: 500%;
		
		// ensure the slogan and the website title 
		// are adaquately spaced out
		margin-bottom: 0.1em;
	}
}

.sky {

	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;

	// the sky should be blue
	background-color: #3498db;

	// it has the lowest possible z-index in this application
	z-index:-273;
}
@import '../shared/_buttons';
@import '../shared/_sky';

[data-template='login']
	display flex
	flex-direction row
	align-items center
	
	// fill the entire screen
	sky()
	
	.form-container
		
		col(1/3, 1/3)
		
		background-color rgba(0,0,0,0.5)
		border-radius 0.25rem
		padding 1rem
		color: white
		
		box-shadow 0.25rem 0.25rem 1rem black
		
		h1
			margin 0 0 0.5rem 0
			text-align center

		form
			// make the form children stack in a column
			display flex
			flex-direction column
			
			button 
				button(background-color: rgba(255,255,255,0.95))
			
			input 
				padding 0.4rem 0.5rem
				border-radius 0.25rem
				margin 0.5rem 0 1rem 0
				color black
				border none
			
			input:focus
			input:hover
				// box-shadow inset 0 0 0.5rem rgba(204, 255, 255, 1)
			
			
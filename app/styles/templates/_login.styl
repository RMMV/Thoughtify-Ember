@import '../shared/_buttons';

[data-template='login']
	display flex
	flex-direction row
	align-items center
	
	height 100vh
	background-color #3498db
	
	form
		col(1/3, 1/3)

		// make the form children stack in a column
		display flex
		flex-direction column
		
		background-color white
		border-radius 0.25rem
		padding 1rem
		
		box-shadow 0.25rem 0.25rem 1rem black

		>*
			margin 0.25rem
		
		button 
			transparent-button(border: 1px solid black, color:  black)
		
		input 
			border 1px solid black
			padding 0.4rem 0.5rem
			border-radius 0.25rem
		
		input:focus
		input:hover
			box-shadow inset 0 0 0.5rem blue
			
			
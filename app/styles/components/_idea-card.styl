[data-component="idea-card"]
	
	/* setup for the progress bar*/
	relative()
	
	bg-color = lighten(blue,95%)
	hover-bg-color = darken(bg-color, 2.5%)

	area(bg-color)
	group()

	// area adjusts margin, we want to reduce it
	margin 0.75rem 0
	hover-color hover-bg-color
	
	a
		span(3.25/4)
		link(color: black, style: 'none')
	
	.idea-stats
		span(0.75/4)
		group()
		
		span
			col(1/2)
			text-align right
			bold()
		
		.updated-at
			color blue
	
	[data-component="progress-bar"]
		
		absolute(bottom: 0, left: 0, right: 0)
